<p id="notice"><%= notice %></p>

  <h1 style="color: white">Students</h1>
  
 <table class="table" style="color: white">
    <thead>
      <tr>
      <th> Name </th>
      <th> Age </th>
      <th> email </th>      
      <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.age %></td>
          <td><%= student.email %></td>          
          <td><%= link_to 'Mostrar', student, class:'btn btn-primary' %></td>
          <td><%= link_to 'Editar', edit_student_path(student), class:'btn btn-success' %></td>
          <td><%= link_to 'Borrar', student, method: :delete, data: { confirm: 'Estas seguro?' }, class:'btn btn-warning' %></td>
        </tr>
      <% end %>
    </tbody>
 </table>
